---
interface Props {
	id: string;
    fullscreen?: boolean;
}

const { id, fullscreen = false } = Astro.props;
---

<div id={id} class={(fullscreen ? 'fullscreen' : '') + ' modal'} tabindex="-1" aria-modal="true" aria-hidden="true">
    <div class="modal-dialog relative border-y">
        <div class={
            (!fullscreen ? 'max-w-6xl mx-auto' : '') +
            " modal-content h-full flex flex-col p-4 gap-4"
        }>
            <slot/>
        </div>
    </div>    
</div>

<style>
    .modal {
        display: flex;
        align-items: center;
        visibility: hidden;
        opacity: 0;
        background-color: rgba(var(--color-5-rgb), .8);
        transition: opacity .15s ease-in-out;
        width: 100vw;
        height: 100vh;
        max-height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10000;
        overflow: hidden;
    }

    .modal.show {
        visibility: visible;
        opacity: 1;
    }

    .modal-dialog {
        position: relative;
        background-color: var(--white);
        height: fit-content;
        width: 100%;
        max-height: calc(100% - (1rem * 2));
        margin: auto 0;
        overflow: hidden;
    }

    .modal.fullscreen .modal-dialog {
        height: 100%;
    }

    html.dark .modal-dialog {
        background-color: var(--color-5);
    } 

    .modal-content {
        height: 100%;
        max-height: 100%;
    }
</style>


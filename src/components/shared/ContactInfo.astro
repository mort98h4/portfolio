<style>
    address {
        transition: background-color .15s ease-in-out;
        background-color: rgba(var(--color-1-rgb), .1);
    }

    html.dark address {
        background-color: var(--color-4);
    }

    li i {
        color: var(--color-2);
    }

    html.dark li i {
        color: var(--color-1);
    }
</style>
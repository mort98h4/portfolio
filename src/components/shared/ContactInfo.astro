<address class="not-italic text-center border border-(--color-3) rounded px-4 py-8 md:px-8 md:py-16 print:py-8 print:px-4">
    <ul class="text-lg">

        {information.map(info => (
            info.href ? 
                <li class="mb-1">
                    <a 
                        href={info.href} 
                        target={info.target} 
                        class={
                            "items-center gap-2 print:gap-1 break-all text-sm md:text-base print:text-sm " +
                            (info.icon === 'fa-solid fa-globe' ? ' print:inline-flex hidden' : 'inline-flex')
                        }
                    >
                        <span class="inline-flex items-center justify-center w-[1.5rem] h-[1.5rem] md:w-[2rem] md:h-[2rem] print:w-[1.25rem] print:h-[w-1.25rem]">
                            <i class={info.icon + ' text-xl md:text-2xl print:text-base'}></i>
                        </span>
                        {info.text}
                    </a>
                </li>
            :   <li class="mb-1 inline-flex items-center gap-2 print:gap-1 text-(--color-2) font-medium text-sm md:text-base print:text-sm">

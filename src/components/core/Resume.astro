---
import { getCollection } from "astro:content";
import ExperienceList from "../shared/ExperienceList.astro";
import Header from "../shared/Header.astro";
import Section from "../shared/Section.astro";

const experiences = await getCollection('experiences');
const educations = await getCollection('educations');

const skills = await getCollection('skills');
const skillTypes = []; 
skills.map(skill => {
    if (skillTypes.indexOf(skill.data.type) === -1) {
        skillTypes.push(skill.data.type);
    }
});
---

<Section id="resume">
    <Header text='Resume' />
    <article class="mb-12">
        <header class="mb-4">
            <h3 class="text-lg sm:text-xl md:text-2xl lg:text-3xl">Experience</h3>
        </header>
        
        <ExperienceList id="work" data={experiences} />
        
    </article>
    <article class="mb-12">
        <header class="mb-4">
            <h3 class="text-lg sm:text-xl md:text-2xl lg:text-3xl">Education</h3>
        </header>
        
        <ExperienceList id="school" data={educations} />
    </article>

    <article class="mb-12">
        <header class="mb-4">
            <h3 class="text-lg sm:text-xl md:text-2xl lg:text-3xl">Skills</h3>
        </header>

        <div class="grid grid-cols-4 gap-4">
            {
                skillTypes.map(skillType => (
                    <div class="col-span-2 md:col-span-1">
                        <h4 class="mb-2 sm:text-lg md:text-xl lg:text-2xl">{skillType}</h4>
                        <ul>
                            {skills.map(skill => (
                                skill.data.type == skillType ? 
                                <li class="font-medium md:text-lg">
                                    <span class="inline-flex items-center justify-center w-6 h-6 me-1">
                                        {skill.data.icon ? <i class={skill.data.icon}></i> : <i class="fa-solid fa-code"></i>}
                                    </span>
                                    {skill.data.text}
                                </li>
                                : ''
                            ))}
                        </ul>
                    </div>
                ))
            }
            
        </div>
    </article>
</Section>